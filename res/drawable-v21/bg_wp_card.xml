    <item android:id="@android:id/mask">
        <shape android:shape="rectangle" >
            <corners android:radius="2dp" />

            <solid android:color="#FF222222" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="2dp" />

            <stroke
